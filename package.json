{
  "scripts": {
    "dev": "concurrently -n webpack,django -c \"blue.bold,green.bold\" \"pnpm --stream -r start\" \"uv run backend/manage.py runserver\"",
    "start": "pnpm --stream -r start",
    "build": "pnpm -r --parallel build",
    "heroku-postbuild": "CI=true pnpm --filter fpbase build",
    "heroku-cleanup": "rm -rf node_modules _resources .github",
    "clean": "rm -rf node_modules && pnpm -r exec -- rm -rf node_modules && pnpm -r run clean",
    "format": "biome format --write",
    "format:check": "biome check --write",
    "format:unsafe": "biome check --write --unsafe",
    "lint": "biome lint --write",
    "e2e": "pnpm --filter @fpbase/e2e test",
    "e2e:headed": "pnpm --filter @fpbase/e2e test -- --headed"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@playwright/test": "^1.56.1",
    "concurrently": "^8.2.0",
    "playwright": "^1.56.1"
  },
  "workspaces": [
    "packages/*",
    "frontend"
  ],
  "engines": {
    "node": "22.x"
  },
  "packageManager": "pnpm@10.19.0"
}
